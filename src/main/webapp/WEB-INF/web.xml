<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
  	<param-name>web-app-version</param-name>
  	<param-value>0.1</param-value>
  </context-param>
  <servlet>
  	<servlet-name>IndexesControllerServlet</servlet-name>
  	<servlet-class>net.hugopoi.IndexesController</servlet-class>
  	<init-param>
  		<param-name>autoindex</param-name>
  		<param-value>true</param-value>
  	</init-param>
  	<init-param>
  	  	<param-name>static-root</param-name>
  		<param-value>/home/hugo/Documents/ESGI/eclipse</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>IndexesControllerServlet</servlet-name>
  	<url-pattern>/indexes/*</url-pattern>
  </servlet-mapping>
  <error-page>
  	<error-code>404</error-code>
  	<location>/errors/404.html</location>
  </error-page>
</web-app>
