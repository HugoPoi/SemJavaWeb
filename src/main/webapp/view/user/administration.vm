	<table class="table table-hover">
  		<thead>
  			<tr>
  			<th>Id</th>
  			<th>Name</th>
  			<th>Software</th>
  			<th>Actions</th>
  			</tr>
  		</thead>
  		<tbody>
  			#foreach($tutorial in $tutorials.keySet())
  			#if(!$filter || $filter.contains($tutorial))
  			#set($tutodata = $tutorials.get($tutorial))
  			<tr>
  			<td>
  				<a href="$tutorialBaseURL$tutorial/0">$tutorial</a>
  			</td>
  			<td>
  				$TutorialModel.getContentForLang($tutodata, "fr-fr").getTitle()
  			</td>
  			<td>
  				$tutodata.getMeta().getSoftware().getName()
  			</td>
  			<td>
  				<form class="form-inline" role="form" action="" method="post" enctype="multipart/form-data">
  					<button type="submit" name="delete" value="$tutorial" class="btn btn-danger btn-xs" >Delete</button>
  				<div class="form-group">
				  <input type="file" name="zipfile" id="inputFile">
				</div>
				  <input type="hidden" name="idname" value="$tutorial" />
				  <button type="submit" class="btn btn-primary btn-xs">Upload Zip</button>
				</form>
